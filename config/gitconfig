[init]
    templatedir = /Users/aleal/.git-template

[include]
    path = /Users/aleal/.work.gitconfig
	path = /Users/aleal/.config/dev/gitconfig

[core]
  editor = "nvim"
  pager = "diff-so-fancy | less --tabs=4 -RFX"

[interactive]
  diffFilter = "diff-so-fancy --patch"

[push]
  default = matching

[alias]
  co = checkout
  ci = commit --verbose
  dci = duet-commit
  dca = duet-commit --amend
  st = status
  br = branch
  lola = log --graph --decorate --oneline --all
  ca = commit --amend --reset-author --verbose
  flog = log --pretty=fuller --decorate
  p = pull --rebase

[pull]
  rebase = true

[commit]
  gpgsign = true

[gpg]
  program = gpg
