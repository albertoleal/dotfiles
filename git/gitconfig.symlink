[user]
    name = Alberto Leal
    email = albertonb@gmail.com

[core]
    editor = "nvim"

[push]
    default = matching

[alias]
    co = checkout
    ci = commit -S --verbose
    st = status
    br = branch
    lola = log --graph --decorate --oneline --all
    ca = commit --amend --reset-author --verbose
    flog = log --pretty=fuller --decorate

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
