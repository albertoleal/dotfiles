[user]
  name = Alberto Leal
  email = albertonb@gmail.com

[core]
  editor = "nvim"

[push]
  default = matching

[alias]
  co = checkout
  ci = commit -S --verbose
  st = status
  br = branch
  lola = log --graph --decorate --oneline --all
  ca = commit --amend --reset-author --verbose
  flog = log --pretty=fuller --decorate

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto

[commit]
	gpgsign = true

[gpg]
	program = gpg

[duet "env"]
  git-author-initials = al
  git-author-name = Alberto Leal
  git-author-email = albertonb@gmail.com
  mtime = 1494852013
